{
	"name": "Better Image Viewer",
	"description": "Enhances Firefox's image viewer with scroll-to-zoom and drag-to-pan functionality.",
	"author": "Geoff Lankow",
	"version": "14",
	"applications": {
		"gecko": {
			"id": "betterimageviewer@darktrojan.net"
		}
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["betterimageviewer.js"]
	}],
	"web_accessible_resources": ["donate.svg", "zoom*.svg", "scroll*.png", "betterimageviewer.css"],
	"manifest_version": 2
}
